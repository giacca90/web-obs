{
  "name": "web-obs",
  "version": "0.0.1",
  "description": "Web-OBS es una librer√≠a de Angular 20 y un WebComponent que permite crear broadcasts de video y audio directamente ne el navegador.",
  "keywords": [
    "angular",
    "web-obs",
    "obs",
    "video",
    "audio",
    "broadcast",
    "live-streaming",
    "streaming",
    "web-component"
  ],
  "author": {
    "name": "Giacca90",
    "email": "giacca90mobile@protonmail.com"
  },
  "scripts": {
    "ng": "ng",
    "tailwind:build": "npx tailwindcss -i ./projects/web-obs/src/styles/tailwind.css -o ./projects/web-obs/src/lib/editor-webcam/assets/tailwind.generated.css --config ./tailwind.config.ts --minify",
    "tailwind:watch": "npx tailwindcss -i ./projects/web-obs/src/styles/tailwind.css -o ./projects/web-obs/src/lib/editor-webcam/assets/tailwind.generated.css --config ./tailwind.config.ts --watch",
    "build:lib": "npm run tailwind:build && ng build web-obs && cd dist/web-obs && npm pack",
    "build:lib:watch": "ng build web-obs --watch",
    "build:elements": "ng run web-obs:elements && node generate-package.js && cd dist/web-obs/elements && npm pack",
    "build": "npm run build:lib && npm run build:elements",
    "start:elements": "ng serve web-obs:serve-elements",
    "start:demo": "ng serve demo-app",
    "dev": "clear && concurrently \"npm run tailwind:watch\" \"npm run build:lib:watch\" \"npm run start:demo\"",
    "test": "ng test web-obs",
    "lint": "ng lint",
    "clean": "rimraf dist out-tsc",
    "publish:web-obs": "cd dist/web-obs && npm publish --access public",
    "publish:elements": "cd dist/web-obs/elements && npm publish --access public",
    "publish": "npm run publish:web-obs && npm run publish:elements",
    "release:patch": "npm version patch && npm run publish",
    "release:minor": "npm version minor && npm run publish",
    "release:major": "npm version major && npm run publish"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "peerDependencies": {
    "@angular/common": "^20.1.6",
    "@angular/compiler": "^20.1.6",
    "@angular/core": "^20.1.6",
    "@angular/elements": "^20.1.6",
    "@angular/forms": "^20.1.6",
    "@angular/platform-browser": "^20.1.6",
    "@angular/router": "^20.1.6",
    "rxjs": "~7.8.2",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.5",
    "@angular/build": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.6",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/jasmine": "~5.1.8",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.1.0",
    "ngx-build-plus": "^20.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3"
  }
}
